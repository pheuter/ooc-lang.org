<h1>New post</h1>

<% form_for(@post) do |f| %>
<%= f.error_messages %>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :content %><br />
	<%= f.text_area :content %>
</p>
<p>
	<%= f.label :category %><br />
	<%= select("category", "id", Category.find(:all).map { |c| [c.name, c.id] }) %>
</p>
<p>
	<%= f.submit 'Create' %>
</p>
<% end %>

<%= link_to 'Back', posts_path %>
