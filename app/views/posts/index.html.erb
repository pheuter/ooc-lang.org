<div class="content">

	<div class="inner-content group">
	
		<div class="main group">
		
			<% @posts.each do |post|%>
			<div class="post">
			
				<h3><%= link_to post.title, post %></h3>		
				<%= raw post.content %>
				<div class="meta"><%= post.created_at.strftime('%a %d %b, %Y') %> by <%= post.author %></div>
			
			</div><!-- end .post -->
			<% end %>	
														
		</div><!-- end .main -->
		
		<div class="sidebar group">
		
			<div class="widget">
				<h3>Categories</h3>
				<ul>
					<% Category.all.each do |c| %>
						<li><%= link_to c.name, c %></li>
					<% end %>
				</ul>
			</div><!-- end .widget -->
				
			<div class="widget">
				<h3>Options</h3>
				<ul>
					<% if user_signed_in? %>
					    <li><%= link_to 'New Post', new_post_path %></li>
					    <li><%= link_to 'New Category', new_category_path %></li>
					<% else %>	
					    <li><%= link_to "Sign in", new_user_session_path %></li>	
				  <% end %>
				</ul>
			</div>
			
		</div><!-- end .sidebar -->
	
	</div><!-- end. inner-content -->

</div><!-- end .content -->