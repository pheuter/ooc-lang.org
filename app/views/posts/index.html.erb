<div id="main-container">

	<ul id="menu">
		<li><%= link_to 'Home', home_index_path %></li>
		<li><%= link_to 'Blog', posts_path%></li>
		<% if user_signed_in? %>
		<li><%= link_to 'New Post', new_post_path %></li>
		<li><%= link_to 'New Category', new_category_path %></li>
		<li><%= link_to "Sign out #{current_user.email}", destroy_user_session_path %>
		<% else %>
		<li><%= link_to "Sign in", new_user_session_path %></li>
		<% end %>
	</ul>
	
	<h1 id="web-title"><a href="/posts"><span class="emphasize">ooc</span> blog</a></h1>
	<h2 id="web-subtitle"><%= Slogan.random%></h2>

	<div id="maincol">
		<% @posts.each do |post|%>
		<div class="article">
			<h1 class="article-title"><%= link_to post.title, post%></h1>
			<div class="article-meta">Published on <%= post.created_at.strftime('%a %d %b, %Y') %> by <%=post.author %> in <%= post.category.name %></div>

			<p><%= raw post.content %>
		</div>
		<% end %>
		<br/><br/>
	</div>

	<div id="sidebar">
		<h2 class="compact">Categories</h2>
		<ul class="compact">
			<% Category.all.each do |c| %>
				<li><%= link_to c.name, c %></li>
			<% end %>
		</ul>
	</div>

</div>

<div id="footer">
	<div>
	<h2 class="compact">Recent Articles</h2>
	<ul class="compact">
		<% Post.find(:all, :order => 'created_at DESC', :limit => 5).each do |post| %>
		<li><%= link_to post.title, post %> <span class="date"><%= post.created_at.strftime("%m/%d/%Y") %></span></li>
		<% end %>
	</ul>
</div>